record (bo, "$(SYS)-$(SUBS):$(DEV):$(SIG)") {
  field (DESC, "$(SUBS):$(DEV) $(DESC)")
  field (DTYP, "S7plc")
  field (OUT,  "@PLC:DBE/$(OFFS) T=BYTE B=0")
  field (ZNAM, "$(ZNAM)")
  field (HIGH, "0.5")
  field (DOL,  "0")
  field (ONAM, "$(ONAM)")
  field (PINI, "YES")
  field (FLNK, "s7-send-counter")
}
